{
  "name": "@threejjjs/tw-root-theme",
  "version": "0.2.3",
  "private": false,
  "bin": {
    "tw-root-theme": "./dist/index.js"
  },
  "type": "module",
  "devDependencies": {
    "@types/bun": "latest"
  },
  "files": [
    "dist/",
    "_templates/"
  ],
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "scripts": {
    "dev": "bun ./cli.ts --dev",
    "sync:css": "rsync -av --exclude='root.css' ../frontend/src/styles/ ./dist/styles/",
    "build": "bun build ./cli.ts --target=bun --outfile dist/index.js --minify"
  },
  "dependencies": {
    "inquirer": "^12.11.0"
  }
}
